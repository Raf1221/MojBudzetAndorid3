<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.raf.mojbudzetandorid.EkranGlowny">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagePrzychody"
        android:src="@drawable/przychody"
        android:onClick="Przychody"
        android:layout_marginBottom="292dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:id="@+id/imageWydatki"
        android:src="@drawable/wydatki"
        android:onClick="Wydatki"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imagePrzychody"
        android:layout_alignStart="@+id/imagePrzychody" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:id="@+id/imageStatystyki"
        android:src="@drawable/statystyki"
        android:onClick="Statystyki"
        android:layout_below="@+id/imageWydatki"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
